<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="tommypurkissdev.simplenotes">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="tommypurkissdev.simplenotes.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="tommypurkissdev.simplenotes.NotesProvider"
            android:authorities="tommypurkissdev.simplenotes"
            android:exported="false" />

        <activity
            android:name="tommypurkissdev.simplenotes.EditorActivity"
            android:label="@string/title_activity_editor"
            android:parentActivityName="tommypurkissdev.simplenotes.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            tools:targetApi="jelly_bean">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tommypurkissdev.simplenotes.tommypurkissdev.simplenotes.MainActivity" />
        </activity>
        <activity
            android:name="tommypurkissdev.simplenotes.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="tommypurkissdev.simplenotes.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tommypurkissdev.simplenotes.tommypurkissdev.simplenotes.MainActivity" />
        </activity>
    </application>

</manifest>